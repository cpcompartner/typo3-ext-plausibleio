{
    "name": "waldhacker/typo3-plausibleio",
    "type": "typo3-cms-extension",
    "description": "TYPO3 Extension to add dashboard widgets for plausible.io statistics.",
    "license": ["GPL-2.0-or-later"],
    "homepage": "https://waldhacker.dev/extensions/plausibleio",
    "support": {
        "issues": "https://github.com/waldhacker/ext-plausibleio/issues"
    },
    "authors": [
        {
            "name": "Susanne Moog",
            "email": "susanne@waldhacker.dev",
            "homepage": "https://waldhacker.dev",
            "role": "Developer"
        }
    ],
    "version": "1.0.0",
    "prefer-stable": true,
    "minimum-stability": "dev",
    "require": {
        "typo3/cms-core": "^11.0@dev | dev-master",
        "typo3/cms-dashboard":  "^11.0@dev | dev-master",
        "psr/http-message": "*",
        "psr/http-factory": "*",
        "psr/http-client": "*",
        "psr/log": "*",
        "ext-json": "*"
    },
    "require-dev": {
        "roave/security-advisories": "dev-latest",
        "overtrue/phplint": "^2.0",
        "phpstan/phpstan": "^0.12.50",
        "phpstan/extension-installer": "^1.0",
        "friendsofphp/php-cs-fixer": "^2.16",
        "typo3/coding-standards": "^0.2.0",
        "symfony/console": "^5.1",
        "symfony/yaml": "^5.1",
        "helmich/typo3-typoscript-lint": "^2.3",
        "saschaegerer/phpstan-typo3": "@dev",
        "vimeo/psalm": "^3.0 | ^4.0",
        "phpunit/phpunit": "^9.4",
        "phpspec/prophecy-phpunit": "^2.0",
        "typo3/testing-framework": "^6.8"
    },
    "autoload": {
        "psr-4": {
            "Waldhacker\\Plausibleio\\": "Classes/",
            "Waldhacker\\Plausibleio\\Tests\\": "Tests/"
        }
    },
    "config": {
        "vendor-dir": ".build/vendor",
        "bin-dir": ".build/bin",
        "platform": {
            "php": "7.4.2"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "mkdir -p .build/web/typo3conf/ext/", "[ -L .build/web/typo3conf/ext/plausibleio ] || ln -snvf ../../../../. .build/web/typo3conf/ext/plausibleio"
        ],
        "ci:lint:php": [
            "phplint -c build/phplint.yaml"
        ],
        "ci:lint:yaml": [
            "php build/yaml-lint.php Configuration/"
        ],
        "ci:stan": [
            "phpstan analyze --configuration build/phpstan.neon"
        ],
        "ci:stan:baseline": [
            "phpstan analyze --configuration build/phpstan.neon --generate-baseline=build/phpstan-baseline.neon"
        ],
        "ci:psalm": [
            "psalm -c build/psalm.xml"
        ],
        "ci:cgl:check": [
            "php-cs-fixer fix --config build/phpcs.dist -v --dry-run"
        ],
        "ci:cgl:fix": [
            "php-cs-fixer fix --config build/phpcs.dist"
        ],
        "ci:tests:unit:cover": [
            "mkdir -p .build/logs",
            "phpdbg -d memory_limit=1024M -qrr ./.build/bin/phpunit -c build/phpunit.xml --coverage-text --colors=never --coverage-clover .build/logs/clover.xml --coverage-cobertura .build/logs/cobertura.xml"
        ],
        "ci:tests:unit": [
            "phpunit -c build/phpunit.xml --log-junit .build/logs/junit.xml"
        ]
    },
    "extra": {
        "typo3/cms": {
            "extension-key": "plausibleio",
            "cms-package-dir": "{$vendor-dir}/typo3/cms",
            "web-dir": ".build/web"
        }
    }

}
